<core:FragmentDefinition
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:core="sap.ui.core"
    xmlns:l="sap.ui.layout"
    displayBlock="true"
    xmlns="sap.m"
    xmlns:f="sap.f"
    xmlns:layout="sap.ui.layout"
>
    <f:DynamicPageTitle class="headerBar">
        <f:heading>
            <FlexBox
                class="headerBar__title"
                justifyContent="SpaceBetween"
                alignItems="Center"
                width="100%"
            >
                <Title
                    text="Estação"
                    level="H6"
                />
                <Title
                    text="PE01"
                    level="H6"
                />
            </FlexBox>
        </f:heading>

        <f:actions>
            <Button
                type="Unstyled"
                icon="sap-icon://begin"
                class="RBtn RBtn-yellow RBtn--rightIcon"
                text="Iniciar"
                press="testHeader()"
            />
        </f:actions>
    </f:DynamicPageTitle>
</core:FragmentDefinition>
