<core:FragmentDefinition
    xmlns:core="sap.ui.core"
    xmlns="sap.m"
    xmlns:f="sap.f"
    xmlns:layout="sap.ui.layout"
    xmlns:card="sap.f.cards"
>
    <VBox class="palete palete--left">
        <f:Card
            class="card"
            width="100%"
        >
            <f:header>
                <FlexBox
                    class="card__header"
                    justifyContent="SpaceBetween"
                    alignItems="Start"
                    width="100%"
                >
                    <items>
                        <Title
                            class="card__headerTitle"
                            text="Palete Esquerda"
                            level="H6"
                        />

                        <Button
                            type="Unstyled"
                            icon="sap-icon://forward"
                            class="RBtn RBtn-yellow RBtn--rightIcon"
                            text="Transferir"
                            press="testCards()"
                        />
                    </items>
                </FlexBox>
            </f:header>

            <f:content>
                <f:GridList
                    class="card__list"
                    width="100%"
                    items="{dataModel>/paleteLeft}"
                >
                    <f:GridListItem highlight="Information">
                        <f:customData>
                            <core:CustomData
                                key="type"
                                value="{dataModel>type}"
                                writeToDom="true"
                            />
                        </f:customData>

                        <Text text="{dataModel>title}" />
                    </f:GridListItem>
                </f:GridList>
            </f:content>
        </f:Card>

        <!--Palete svg -->
        <VBox class="palete__graph">
            <Image
                src="assets/palete.svg"
                alt="Descrição da imagem"
                width="100%"
            />
        </VBox>
    </VBox>
</core:FragmentDefinition>
